{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* VueJS @ alias resolver */
    "paths": {
      "@/*": ["./resources/js/*"]
    }
  },
  "include": [
    "prettier.config.ts",
    "tailwind.config.ts",
    "vite.config.ts",
    "postcss.config.cjs",
    "eslint.config.mjs",
    "resources/**/*.ts",
    "resources/**/*.tsx",
    "resources/**/*.vue",
    "resources/**/*.d.ts"
  ],
  "exclude": ["node_modules", "public"]
}
